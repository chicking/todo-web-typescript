{
  "compilerOptions": {
    "target": "es5",
    "module": "es2015",
    "moduleResolution": "node",
    "sourceMap": true,
    "strict": true,
    "noImplicitReturns": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "allowSyntheticDefaultImports": true,
    "strictNullChecks": false,
    "lib": [
      "dom", "es6"
    ],
    "typeRoots": [
      "../../node_modules/@types", "../../src/@types"
    ],
    "baseUrl": "../../",
    "paths": {
      "@/*": ["src/*"]
    }
  }
}
